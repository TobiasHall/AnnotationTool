@{
    ViewData["Title"] = "Label Studio";
}
@model UniversalDataToolViewModel

<script type="application/javascript" src="https://unpkg.com/universal-data-tool@0.13.2/vanilla.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="text-center">
    <h1 class="display-4">Universal Data Tool</h1>



    <div class="row">
        <div class="col-3">
            <div class="row">
                <div class="col-12">
                    @*<h6>Namn för projekt:</h6>*@
                    <input id="project-name" type="text" class="form-control m-input" placeholder="Projektets namn" autocomplete="off" />
                </div>
            </div>
            <div class="row">
                <div class="col-12">

                    <h6>Select a File to Load:</h6>
                    <input type="file" id="fileToLoad" accept="text/plain" onchange="loadFileAsText()" />
                    <input type="file" id="imagesToLoad" multiple accept="image/*" onchange="loadFileAsImages()" />



                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <h6>Välj format:</h6>
                    <input type="radio" id="text" name="source" value="text" checked>
                    <label for="text">Text</label><br>
                    <input type="radio" id="picture" name="source" value="picture">
                    <label for="picture">Bild</label>
                    <br />
                </div>
                <div class="col-lg-6">
                    <h6>Annoteringssätt:</h6>
                    <input type="radio" id="classification" name="type" value="classification" checked>
                    <label for="classification">Klassificera</label><br>
                    <input type="radio" id="label" name="type" value="label">
                    <label for="label">Tagga</label>
                    <br />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <h6>Skriv ord att annotera efter:</h6>
                    <div id="inputFormRow">
                        <div class="input-group mb-3">
                            <input id="addedLabel" type="text" name="title[]" class="form-control m-input" placeholder="Skapa kategorier" autocomplete="off">
                        </div>
                    </div>

                    <div id="newRow"></div>
                    <button id="addRow" type="button" class="btn btn-info">Ny rad</button>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button class="selector" onclick="loadUdt()">Skapa projekt</button>
                </div>

            </div>

        </div>
        <div class="col-9">
            <div id="udt"></div>
        </div>
    </div>

    <p>
        Please specify a file, or a set of files:<br>
        <input type="file" id="myFile" multiple accept="image/*, text/plain" size="50" onchange="myFunction()">
    </p>

<textarea id="demo" style="width:400px;height:150px;"></textarea>


</div>


<script src="~/js/UniversalDataTool.js"></script>
